package jeu.bases {		import flash.display.MovieClip;		import flash.display.Sprite;	import flash.events.Event;	/**	 * @author Aymeric	 */	public class Alien extends Sprite {				private var maBaseAlien : MovieClip=new BaseAlien();				private var vieBase:int;		private var vie:int=10000;		private var niveauBase:int=1;		private var baseDetruite : Boolean=false;		public function Alien():void {						addChild(maBaseAlien);			maBaseAlien.x=960;			maBaseAlien.y=320;			maBaseAlien.scaleX=0.7;			maBaseAlien.scaleY=0.7;			vieBase=vie;		}		public function baseAttaquee(degatSubit : int) : Boolean {						vie = vie - degatSubit;						if (niveauBase==1) {								if ((vie<vieBase/3*2) && (vie>vieBase/3)) {					maBaseAlien.gotoAndStop(2);				} else if ((vie<vieBase/3) && (vie>1)) {					maBaseAlien.gotoAndStop(3);				} else if (vie<1) {					maBaseAlien.gotoAndStop(4);					baseDetruite=true;					dispatchEvent(new Event("perdu"));				}			} else if (niveauBase==2) {								if ((vie<vieBase/3*2) && (vie>vieBase/3)) {					maBaseAlien.gotoAndStop(6);				} else if ((vie<vieBase/3) && (vie>1)) {					maBaseAlien.gotoAndStop(7);				} else if (vie<1) {					maBaseAlien.gotoAndStop(8);					baseDetruite=true;				}			} else if (niveauBase==3) {								if ((vie<vieBase/3*2) && (vie>vieBase/3)) {					maBaseAlien.gotoAndStop(10);				} else if ((vie<vieBase/3) && (vie>1)) {					maBaseAlien.gotoAndStop(11);				} else if (vie<1) {					maBaseAlien.gotoAndStop(12);					baseDetruite=true;				}			}			return baseDetruite;		}	}}