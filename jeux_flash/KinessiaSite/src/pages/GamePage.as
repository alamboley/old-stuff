package pages {	import com.gaiaframework.api.IBitmap;	import com.gaiaframework.templates.AbstractPage;	import com.greensock.TweenMax;	import flash.display.Bitmap;	import flash.events.Event;	public class GamePage extends AbstractPage {				private var _background:Bitmap;				private var _persos:Bitmap;				public function GamePage() {			super();			alpha = 0;			new Scaffold(this);		}		override public function transitionIn():void {			super.transitionIn();			TweenMax.to(this, 0.3, {alpha:1, onComplete:transitionInComplete});						_background = new Bitmap(IBitmap(assets.imgGame).bitmapData);			_background.x = (stage.stageWidth - _background.width) / 2;			addChild(_background);						_persos = new Bitmap(IBitmap(assets.persos).bitmapData);			_persos.x = (stage.stageWidth - _persos.width) / 2 - 150;			_persos.y = 450;			addChild(_persos);			stage.addEventListener(Event.RESIZE, _onResize);		}				private function _onResize(evt:Event):void {			_background.x = (stage.stageWidth - _background.width) / 2;			_persos.x = (stage.stageWidth - _persos.width) / 2 - 150;		}		override public function transitionOut():void {			super.transitionOut();			TweenMax.to(this, 0.3, {alpha:0, onComplete:transitionOutComplete});		}	}}